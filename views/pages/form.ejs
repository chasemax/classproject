<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Student Employment</title>
  </head>
    <body>
        <main>
            <header class="p-3 bg-dark text-white">
                <div class="container">
                  <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                      <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                    </a>
            
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                      <li><a href="index.ejs" class="nav-link px-2 text-secondary">Student Employment</a></li>
                      <li><a href="data.ejs" class="nav-link px-2 text-white">View Students</a></li>
                      <li><a href="reports.ejs" class="nav-link px-2 text-white">Reports</a></li>
                      <li><a href="#" class="nav-link px-2 text-white">Add Student</a></li>
                    </ul>
    
                  </div>
                </div>
              </header>

            <h1>Form</h1>

            <form action="/new" method="post">
                <input type="text" id="firstname" name="firstname">
                <input type="text" id="lastname" name="lastname">
                <input type="checkbox" id="international" name="international">
                <select id="gender" name="gender">
                    <option>Male</option>
                    <option>Female</option>
                    <option>Prefer not to answer</option>
                </select>
                <input type="email" id="email" name="email">
                <input type="number" id="exphours" name="exphours">
                <select id="semester" name="semester">
                    <option>Fall</option>
                    <option>Winter</option>
                    <option>Spring</option>
                    <option>Summer</option>
                </select>
                <input type="number" id="semesteryear" name="semesteryear">
                <input type="tel" id="phone" name="phone">
                <input type="number" id="byuid" name="byuid">
                <select id="positiontype" name="positiontype">
                    <option>TA</option>
                    <option>RA</option>
                    <option>Office</option>
                    <option>Student Instructor</option>
                    <option>Other</option>
                </select>
                <input type="text" id="classcode" name="classcode">
                <select id="empl_record" name="empl_record">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
                <input type="text" id="supervisor" name="supervisor">
                <input type="date" id="hiredate" name="hiredate">
                <input type="number" id="payrate" name="payrate" step="0.05">
                <input type="date" id="lastpayincrease" name="lastpayincrease">
                <input type="number" id="payincreaseamount" name="payincreaseamount" step="0.05">
                <input type="date" id="increaseinputdate" name="increaseinputdate">
                <select id="yearinprogram" name="yearinprogram">
                    <option>MSB Core</option>
                    <option>MISM</option>
                    <option>MBA</option>
                    <option>MPA</option>
                    <option>MAcc</option>
                    <option>Other</option>
                </select>
                <input type="checkbox" id="gradtuition" name="gradtution">
                <input type="checkbox" id="namechangecomplete" name="namechangecomplete">
                <input type="text" id="notes" name="notes">
                <input type="checkbox" id="terminated" name="terminated">
                <input type="date" id="terminationdate" name="terminationdate">
                <input type="checkbox" id="qualtricssurveysent" name="qualtricssurveysent">
                <input type="checkbox" id="submittedeform" name="submittedeform">
                <input type="date" id="eformsubmissiondate" name="eformsubmissiondate">
                <input type="checkbox" id="workauthorization" name="workauthorization">
                <input type="date" id="workauthorizationdate" name="workauthorizationdate">
                <input type="text" id="byuname" name="byuname">

                <input type="submit" value="Submit">
            </form>
        </main>
    </body>
</html>