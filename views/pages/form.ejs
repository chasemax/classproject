<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Student Employment</title>
  </head>
    <body>
        <main>
            <header class="p-3 bg-dark text-white">
                <div class="container">
                  <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                      <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                    </a>
            
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                      <li><a href="index" class="nav-link px-2 text-secondary">Student Employment</a></li>
                      <li><a href="data" class="nav-link px-2 text-white">View Students</a></li>
                      <li><a href="reports" class="nav-link px-2 text-white">Reports</a></li>
                      <li><a href="#" class="nav-link px-2 text-white">Add Student</a></li>
                    </ul>
    
                  </div>
                </div>
              </header>

            <h1>Form</h1>

            <form action="/new" method="post">
                <input type="text" id="firstname" name="firstname" placeholder="First Name"> <br><br>
                <input type="text" id="lastname" name="lastname" placeholder="Last Name"> <br><br>
                <a>International Student?: </a>
                <input type="checkbox" id="international" name="international"><br><br>
                <select id="gender" name="gender">
                    <option value="" disabled selected>Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Prefer not to answer</option>
                </select><br><br>
                <input type="email" id="email" name="email" placeholder="Email Address"><br><br>
                <input type="number" id="exphours" name="exphours" placeholder="Expected Hours"><br><br>
                <select id="semester" name="semester">
                    <option value="" disabled selected>Select Semester</option>
                    <option>Fall</option>
                    <option>Winter</option>
                    <option>Spring</option>
                    <option>Summer</option>
                </select><br><br>
                <input type="number" id="semesteryear" name="semesteryear" placeholder="Semester Year"><br><br>
                <input type="tel" id="phone" name="phone" placeholder="Phone"><br><br>
                <input type="number" id="byuid" name="byuid" placeholder="BYU ID"><br><br>
                <select id="positiontype" name="positiontype">
                    <option value="" disabled selected>Position Type</option>
                    <option>TA</option>
                    <option>RA</option>
                    <option>Office</option>
                    <option>Student Instructor</option>
                    <option>Other</option>
                </select><br><br>
                <input type="text" id="classcode" name="classcode" placeholder="Class Code"><br><br>
                <select id="empl_record" name="empl_record">
                    <option value="" disabled selected>Employee Record</option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select><br><br>
                <input type="text" id="supervisor" name="supervisor" placeholder="Supervisor"><br><br>
                <a>Hire Date: </a>
                <input type="date" id="hiredate" name="hiredate" placeholder="Hire Date"><br><br>
                <input type="number" id="payrate" name="payrate" step="0.05" placeholder="Pay Rate"><br><br>
                <a>Last Pay Increase: </a>
                <input type="date" id="lastpayincrease" name="lastpayincrease" placeholder="Last Pay Increase"><br><br>
                <input type="number" id="payincreaseamount" name="payincreaseamount" step="0.05" placeholder="Pay Increase Amount"><br><br>
                <a>Pay Increase Date: </a>
                <input type="date" id="increaseinputdate" name="increaseinputdate" placeholder="Pay Increase Date"><br><br>
                <select id="yearinprogram" name="yearinprogram">
                    <option value="" disabled selected>Year in Program</option>
                    <option>MSB Core</option>
                    <option>MISM</option>
                    <option>MBA</option>
                    <option>MPA</option>
                    <option>MAcc</option>
                    <option>Other</option>
                </select><br><br>
                <a>Paying Grad Tuition?: </a>
                <input type="checkbox" id="gradtuition" name="gradtution"><br><br>
                <a>Name Change Complete: </a>
                <input type="checkbox" id="namechangecomplete" name="namechangecomplete"><br><br>
                <input type="text" id="notes" name="notes" placeholder="Notes"><br><br>
                <a>Terminated?: </a>
                <input type="checkbox" id="terminated" name="terminated"><br><br>
                <a>Termination Date: </a>
                <input type="date" id="terminationdate" name="terminationdate" placeholder="Termination Date"><br><br>
                <a>Qualtrics Survey Sent?: </a>
                <input type="checkbox" id="qualtricssurveysent" name="qualtricssurveysent"><br><br>
                <a>ISubmitted eForm?: </a>
                <input type="checkbox" id="submittedeform" name="submittedeform"><br><br>
                <a>eForm Submission Date: </a>
                <input type="date" id="eformsubmissiondate" name="eformsubmissiondate" placeholder="eForm Submission Date"><br><br>
                <a>Work Authorization?: </a>
                <input type="checkbox" id="workauthorization" name="workauthorization"><br><br>
                <a>Work Authorization Date: </a>
                <input type="date" id="workauthorizationdate" name="workauthorizationdate" placeholder="Work Authorization Date"><br><br>
                <input type="text" id="byuname" name="byuname" placeholder="BYU Name"><br><br>

                <input type="submit" value="Submit">
            </form>
        </main>
    </body>
</html>